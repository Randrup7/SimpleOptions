{
  "version": "2.0.0",
  "tasks": 
  [
  {
    "type": "shell",
    "label": "C/C++: clang++ My costum configuration",
    "command": "/usr/bin/clang++",
    "args": 
    [
      "-std=c++20",
      "-stdlib=libc++",
      "-g",
      "${workspaceFolder}/*.cpp",
      "-o",
      "${fileDirname}/${fileBasenameNoExtension}"
    ],
    "options": 
    {
      "cwd": "${workspaceFolder}"
    },
    "problemMatcher": 
    [
      "$gcc"
    ],
    "group": 
    {
      "kind": "build",
      "isDefault": true
    }
  }
  ]
}